<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/camera">

    <FrameLayout
        android:id="@+id/fl"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sv_movie"/>

        <org.yanzi.camera.preview.CameraSurfaceView
            android:visibility="visible"
            android:layout_gravity="center"
            android:id="@+id/camera_surfaceview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:keepScreenOn="true"/>



        <LinearLayout
            android:id="@+id/test"
            android:background="#66000000"
            android:layout_width="500dp"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:visibility="invisible"
            android:layout_gravity="left|bottom"
            android:layout_margin="30dp"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="准备中..."
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/ll_progressBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:visibility="visible"
                android:gravity="center">

                <ProgressBar
                    android:id="@+id/firstBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:max="200"
                    android:maxHeight="20dp"
                    android:minHeight="20dp"
                    android:indeterminate="true"
                    android:visibility="visible"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_info"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:scaleX="1.12"
                    android:scaleY="1.12"
                    android:id="@+id/iv_face"
                    android:visibility="gone"
                    />

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/iv_ic"
                    android:src="@drawable/face"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:layout_margin="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/iv_mid"
                    android:src="@drawable/face"
                    />

            </LinearLayout>

            <TextView
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/tv_name"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:id="@+id/tv_code"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:textColor="#ff0000"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="识别结果："
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                android:id="@+id/tv_result"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:padding="10dp"
            android:visibility="invisible"
            android:background="#11000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人证识别系统"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="2016.12.30 11:46"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <include layout="@layout/camera_top_panel"
            android:visibility="invisible"/> <!-- 顶部控制栏 -->

        <include layout="@layout/camera_bottom_panel"
            android:visibility="invisible"
            /> <!-- 底部控制栏 -->

        <org.yanzi.ui.FaceView
            android:id="@+id/faceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_enter"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:text="GO"/>

    </FrameLayout>



</RelativeLayout>